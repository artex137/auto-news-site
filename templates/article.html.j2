<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ title }} — Search 433</title>
  <meta name="description" content="{{ meta_description }}">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="../style.css">
</head>
<body>
  <header class="site-header">
    <div class="container row between middle">
      <a class="brand" href="../index.html"><span class="crest">433</span><span class="brand-text"><em>Search</em> 433</span></a>
      <nav class="nav">
        <a href="../index.html" class="nav-link">Home</a>
        <a href="./index.html" class="nav-link">Articles</a>
      </nav>
    </div>
  </header>

  <article class="section">
    <div class="container">
      <div class="card" style="overflow:hidden">
        <!-- NOTE: hero path is already adjusted to be relative to /articles/ -->
        <div class="card-media" style="aspect-ratio:16/7;background-image:url('{{ hero }}')"></div>
      </div>

      <div class="prose" style="margin-top:18px">
        <h1>{{ title }}</h1>
        <p class="byline">{{ timestamp }}</p>
        {{ body | safe }}
      </div>
    </div>
  </article>

  <footer class="site-footer">
    <div class="container row between wrap">
      <p>© <script>document.write(new Date().getFullYear())</script> Search 433</p>
      <p class="muted">Preserved in the archive.</p>
    </div>
  </footer>
</body>
</html>
